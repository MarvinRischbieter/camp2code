# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
# - See more at: http://meirkriheli.com/en/2014/08/editorconfig-for-consistent-coding-styles/#sthash.uXwUhlPE.dpuf

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# 4 space indentation
[{*.py,*.json}]
indent_size = 4
